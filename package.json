{
  "name": "byte-alchemy",
  "version": "0.0.1",
  "description": "一个基于 Electron + Vue 3 + Element Plus 的现代化图形化编解码工具，界面风格模仿 CyberChef。",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder",
    "start": "electron ."
  },
  "keywords": [],
  "author": "QAQ",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.13.2",
    "element-plus": "^2.13.1",
    "vue": "^3.5.26",
    "vuedraggable": "^4.1.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.decoder.pro",
    "productName": "ByteAlchemy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "app/sboxes.json"
    ],
    "extraResources": [
      {
        "from": "python-dist/backend-server",
        "to": "backend-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "dir"
      ],
      "category": "Utility"
    }
  }
}
